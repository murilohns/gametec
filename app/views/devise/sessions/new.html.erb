<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Entre para continuar</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), role:"form") do |f| %>
                        <%= devise_error_messages! %>
                        <fieldset>
                            <div class="form-group">
                                <!--<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus> -->
                            <%= f.email_field :email, autofocus: true, type:"email", placeholder:"E-mail", class:"form-control",  required: true %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", placeholder:"Senha", type:"password", class:"form-control",  required: true %>
                            </div>
                            <div class="checkbox">
                                <label>
                                <%= f.check_box :remember_me %>
                                    Lembrar me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <%= f.submit "Entrar", class:"btn btn-lg btn-success btn-block" %>
                            <%= link_to "PÃ¡gina Inicial", root_path %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

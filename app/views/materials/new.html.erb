<div class="row white">
    <div class="col-lg-12">
        <h1 class="page-header text-center">Publique seu material</h1>
    </div>
</div>
<div class="row">
  <div class="col-sm-4 center col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
      Materiais
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-10">
            <% if !@material.errors.empty? %>
               <div class = "alert alert-error">
                  
                  <ul>
                     <% @material.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                     <% end %>
                  </ul>
                  
               </div>
            <% end %>
               <%= form_for @material, html: { multipart: true } do |f| %>
                  <div class="form-group">
                     <label>Descrição do arquivo</label>
                     <%= f.text_field :name, class:"form-control", required: true %>
                  </div>
                  <div class="form-group">
                     <label>Arquivo</label>
                     <%= f.file_field :attachment, class:"form-control", required: true %>
                  </div>
                  <%= f.submit "Salvar", class: "btn btn-primary" %>
                  <%= link_to "Página Inicial", root_path %>
               <% end %>
         </div>
        </div>
      </div>
    </div>
  </div>
</div>
